# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[nowplaying]
label=
command=~/share/i3blocks/now_playing
interval=5
color=#00ff00
align=left

[volume]
label=
instance=Master
command=/usr/share/i3blocks/volume 5% pulse
interval=once
color=#00ff00
signal=10

[disk-home]
instance=$HOME
command=/usr/share/i3blocks/disk
interval=30

[External IP]
label=
command=curl ifconfig.me/ip
color=#00FF00
interval=6000
separator=false

[wireless]
label=
instance=wlan0
command=~/share/i3blocks/wifi
color=#00FF00
interval=10
separator=false

[bandwidth]
command=~/share/i3blocks/bandwidth
interval=10
color=#00FF00

[cpu]
label=
command=~/share/i3blocks/cpu_usage
interval=10
separator=false

[memory]
label=🐏
command=~/share/i3blocks/memory
separator=false
interval=30
separator=false

[load]
label=
command=~/share/i3blocks/load_average
interval=10

[battery]
label=
command=/usr/share/i3blocks/battery
color=#00ff00
interval=30

[time]
command=date '+%a %d %H:%M:%S'
color=#00ff00
interval=1
